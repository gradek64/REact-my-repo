{
  "name": "react_web",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "dev": "concurrently --raw --kill-others \"npm:dev:*\"",
    "dev:build-server": "webpack -w --config ./config/server/webpack.config.dev.js",
    "wait": "wait on server to be build before running it",
    "dev:run-server": " NODE_ENV=development wait-on ./dist/server.js &&  nodemon --inspect  ./dist/server.js",
    "---INFO---": "need to open on http://localhost:3100/ which hydreated react client app not server",
    "dev:run:client-dev-server": "webpack-dev-server --hot --config ./config/client/webpack.config.js --mode development --port 3100"
  },
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": ">=16.0.0 <17.0.0"
  },
  "babel": {
    "presets": [
      "@babel/react",
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/proposal-class-properties",
      "@babel/plugin-transform-runtime"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@reduxjs/toolkit": "1.3.6",
    "babel-regenerator-runtime": "^6.5.0",
    "concurrently": "^6.3.0",
    "connected-react-router": "^6.9.1",
    "express": "^4.17.1",
    "history": "4.10.1",
    "isomorphic-fetch": "^3.0.0",
    "nodemon": "^2.0.13",
    "react": "16.8.5",
    "react-dom": "16.8.5",
    "react-redux": "7.1.3",
    "react-router-dom": "^5.3.0",
    "redux": "^4.1.2",
    "redux-saga": "1.1.3",
    "redux-thunk": "^2.4.0",
    "serialize-javascript": "^6.0.0",
    "typed-redux-saga": "1.3.1",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "7.0.0",
    "babel-loader": "8.0.5",
    "boxen": "4.2.0",
    "css-loader": "2.1.1",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "node-color-log": "^6.0.0",
    "style-loader": "^0.23.1",
